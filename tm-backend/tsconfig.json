{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist/",
		"rootDir": "./src/",
		"strict": true,
		"noImplicitAny": false,
		"types": ["node"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true
	},
	"exclude": ["node_modules", "dist"]
}
